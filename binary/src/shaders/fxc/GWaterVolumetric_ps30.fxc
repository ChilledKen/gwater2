float ALPHA		: register(c0);

struct PS_INPUT {
	float2 P 		: VPOS;
	float2 coord	: TEXCOORD0;
};

float4 main(PS_INPUT i) : COLOR {
	float2 offset = (i.coord - 0.5) * 2.0;
	float radius2 = dot(offset, offset);

	float bulge = radius2 < 1 ? (1 - radius2) * ALPHA : 0;
	return float4(bulge, bulge, bulge, ALPHA);
};